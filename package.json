{
  "name": "@37signals/basecamp",
  "version": "0.2.1",
  "private": true,
  "description": "TypeScript SDK for the Basecamp API",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "typescript/dist/index.js",
  "types": "typescript/dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./typescript/dist/index.js",
      "types": "./typescript/dist/index.d.ts"
    },
    "./oauth": {
      "import": "./typescript/dist/oauth/index.js",
      "types": "./typescript/dist/oauth/index.d.ts"
    }
  },
  "files": [
    "typescript/dist"
  ],
  "scripts": {
    "prepare": "cd typescript && npm ci --include=dev --ignore-scripts && npm run build"
  },
  "dependencies": {
    "openapi-fetch": "^0.17.0"
  }
}
