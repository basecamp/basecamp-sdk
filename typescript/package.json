{
  "name": "@basecamp/sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for the Basecamp 3 API",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src/generated"
  ],
  "scripts": {
    "generate": "openapi-typescript ../spec/build/smithy/openapi/openapi/Basecamp.openapi.json -o src/generated/schema.d.ts && tsx scripts/extract-metadata.ts ../openapi.json > src/generated/metadata.json",
    "build": "tsc",
    "prepublishOnly": "npm run generate && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "basecamp",
    "api",
    "sdk",
    "typescript"
  ],
  "author": "Basecamp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/basecamp/basecamp-sdk.git",
    "directory": "typescript"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "openapi-fetch": "^0.13.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "msw": "^2.7.0",
    "openapi-typescript": "^7.5.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
